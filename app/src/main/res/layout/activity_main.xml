<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#1C1C1C"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtHienThi"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:background="@drawable/txt_hien_thi"
        android:gravity="bottom|right"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtkq"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/txt_hien_thi"
        android:gravity="bottom|right"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="italic" />

    <TableLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/button_core2"
                android:text="AC"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core2"
                android:text="+/-"
                android:textSize="24dp"
                tools:text="+/-" />

            <Button
                android:id="@+id/btnPhanTram"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core2"
                android:text="%"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnChia"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core"
                android:text="/"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/button_core1"
                android:text="7"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core1"
                android:text="8"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core1"
                android:text="9"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnNhan"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core"
                android:text="X"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/button_core1"
                android:text="4"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core1"
                android:text="5"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core1"
                android:text="6"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnCong"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core"
                android:text="+"
                android:textSize="24dp" />

        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/button_core1"
                android:text="1"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core1"
                android:text="2"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core1"
                android:text="3"
                android:textSize="24dp" />

            <Button
                    android:id="@+id/btnTru"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core"
                android:text="-"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_span="2"
                android:background="@drawable/button_core11"
                android:text="0"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnCham"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core1"
                android:text="."
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnBang"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_core"
                android:text="="
                android:textSize="24dp" />
        </TableRow>

    </TableLayout>
</LinearLayout>